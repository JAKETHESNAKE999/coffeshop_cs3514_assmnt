<h1>Listing products</h1>

<table cellspacing=5 cellpadding=0>
  <tr>
    <th>Image</th>
    <th>Title + Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @o_products.each do |o_product| %>
  <tr valign=top>
    <td><%= image_tag o_product.image_url, :height => 60, :width => 60 %></td>
    <td width=250 ><b><%= o_product.title %></b><p><%= o_product.description %></p></td>
    <td><%= o_product.price %></td>
    <td><%= link_to 'Show', o_product %></td>
    <td><%= link_to 'Edit', edit_o_product_path(o_product) %></td>
    <td><%= link_to 'Destroy', o_product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product', new_o_product_path %>
